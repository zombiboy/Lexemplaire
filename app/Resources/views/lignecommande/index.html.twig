{% extends 'base.html.twig' %}

{% block body %}
    <h1>Lignecommandes list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Article</th>
                <th>Quantite</th>
            </tr>
        </thead>
        <tbody>
        {% for ligneCommande in ligneCommandes %}
            <tr>
                <td><a href="{{ path('lignecommande_show', { 'id': ligneCommande.id }) }}">{{ ligneCommande.id }}</a></td>
                <td>{{ ligneCommande.quantiteCommande }}</td>
                <td>{{ ligneCommande.commande }}</td>
                <td>{{ ligneCommande.article }}</td>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('lignecommande_new') }}">Create a new ligneCommande</a>
        </li>
    </ul>
{% endblock %}
