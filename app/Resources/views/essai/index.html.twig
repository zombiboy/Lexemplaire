{% extends 'base.html.twig' %}

{% block body %}
    <h1>Essais list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for essai in essais %}
            <tr>
                <td><a href="{{ path('essai_show', { 'id': essai.id }) }}">{{ essai.id }}</a></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('essai_show', { 'id': essai.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('essai_edit', { 'id': essai.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('essai_new') }}">Create a new essai</a>
        </li>
    </ul>
{% endblock %}
