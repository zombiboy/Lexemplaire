<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="">
        <meta name="author" content="">

        <title>{% block title %}La Terrasse!{% endblock %}</title>

         <link href="{{ asset('bundles/maquis/css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ asset('bundles/maquis/css/font-awesome.min.css') }}" rel="stylesheet">
        <link href="{{ asset('bundles/maquis/css/app.css') }}" rel="stylesheet">
   
        {% block stylesheets %} {% endblock %} 
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        <style type="text/css">  
        /* formulaire de vente commande */
       
        </style>
    </head>
    <body>

        <div class="container-fluid">  <!-- container-fluid permet de prendr toute la largeur de l'ecran -->
            <header class="row page-header">
                <div class="col-sm-12">
                Entete
                {{ include('navb.html.twig') }} <!-- inclu l'entete -->
                </div>
            </header>

            <div id="minibody" class="row">
             
                <nav class="col-sm-3 ">
                    {% block sidebar %}{% endblock %} <!-- Le   block menu   -->
                </nav>
                <section  id="zoneBody" class="col-sm-9">
                {% block body %} {% endblock %}    <!-- Le  block body   -->
                </section>
            </div>
            <footer class="row">
                <div class="col-sm-12">
                <p>&copy; La TERRASSE </p>
                </div>
            </footer>
        </div>
      

      {% block javascript %}
      <!-- Le javascript
      ================================================== -->
      <!-- Placed at the end of the document so the pages load faster -->
      <script src="{{ asset('bundles/maquis/js/jquery-3.2.1.slim.min.js') }}"></script>
        <script src="{{ asset('bundles/maquis/js/bootstrap.min.js') }}"></script>
      <script src="{{ asset('bundles/maquis/js/app.js') }}"></script>

      {% endblock %}    
    </body>
</html>
